<Page x:Class="typicalEnglish.Scripts.Views.DecksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:typicalEnglish"
      xmlns:hn="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d"  
      xmlns:dd="urn:gong-wpf-dragdrop"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DecksPage" DataContext="{x:Static local:App.DeckVM}" FontFamily="Candara Light">
    <Grid Margin="0 00 0 0">
        <Grid Margin="0 10 0 0">
            <Button HorizontalAlignment="Center" VerticalAlignment="Top"
                Height="70" Width="70" Template="{StaticResource CircularButton}"
                Content="{md:PackIcon Kind=BookAdd, Size=40}" ToolTip="Add deck"
                    Foreground="White" Background="#00adc1" BorderThickness="0" BorderBrush="Transparent">
                
            </Button>
            <ListBox dd:DragDrop.IsDragSource="True" Margin="0 70"
         dd:DragDrop.IsDropTarget="True" VerticalAlignment="Top">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True">
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBoxItem Content="First" Height="100" Width="200"/>
                <ListBoxItem Content="Second" Height="100" Width="500"/>
                <ListBoxItem Content="First" Height="100" Width="500"/>
                <ListBoxItem Content="Second" Height="100" Width="500"/>
            </ListBox>

        </Grid>
     
    </Grid>
</Page>
