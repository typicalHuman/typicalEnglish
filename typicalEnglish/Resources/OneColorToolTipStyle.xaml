<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:typicalEnglish.Resources">
    <Style TargetType="ToolTip" x:Key="OneColorTT" BasedOn="{StaticResource {x:Type ToolTip}}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Candara Light"/>
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=Control}, Path=Background}"/>
        <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=Control}, Path=Foreground}"/>
    </Style>
</ResourceDictionary>